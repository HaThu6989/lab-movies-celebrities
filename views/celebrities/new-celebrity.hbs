<h2>Add a new Celebrity</h2>

<form action="/celebrities/create" method="POST">
  <label> Name:
    <input type="text" name="name" />
  </label>

  <br> <br>
  <label> Occupation:
    <textarea name="occupation" cols="30" rows="2"> </textarea>
  </label>
  <br> <br>
  <label> CatchPhrase:
    <textarea name="catchPhrase" cols="30" rows="4"> </textarea>
  </label>
  <br> <br>
  <button type="submit"> Create </button>
</form>